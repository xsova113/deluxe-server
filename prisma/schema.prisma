// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Newsletter {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
}

model Reservation {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  firstName        String
  lastName         String
  email            String
  phone            String
  address          String
  city             String
  province         String
  country          String
  checkInDate      String
  checkOutDate     String
  creditCardNumber String
  creditCardType   String
  roomId           String
}
